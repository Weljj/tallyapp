<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.AccountingIncome">

    <!-- Remember to replace "YourFragmentName" with the actual name of your fragment class -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Button to submit the accounting information -->

        <EditText
            android:id="@+id/editTextIncomeType"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/round_edittext_bg"
            android:drawableLeft="@drawable/ic_account_icon"
            android:drawablePadding="8dp"
            android:hint="Category"/>

        <EditText
            android:id="@+id/editTextIncomeAmount"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_edittext_bg"
            android:drawableLeft="@drawable/ic_money_icon"
            android:hint="Money"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/editTextIncomeTime"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_edittext_bg"
            android:drawableLeft="@drawable/ic_time_icon"
            android:hint="Date" />

        <EditText
            android:layout_marginTop="10dp"
            android:background="@drawable/round_edittext_bg"
            android:id="@+id/editTextIncomeTDescribe"
            android:layout_width="match_parent"
            android:layout_height="205dp"
            android:drawablePadding="8dp"
            android:hint="Description"
            android:gravity="top|start"/> <!-- 设置上边内边距，以留出空间给图标 -->


        <Button
            android:layout_marginTop="20dp"
            android:id="@+id/btnSubmitIncome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+add income" />
    </LinearLayout>
</FrameLayout>
